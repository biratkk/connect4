{
  "name": "myconnect4",
  "version": "1.0.0",
  "description": "This is a basic game of Connect4 made using React frontend and Express backend.",
  "main": "backend/server.js",
  "scripts": {
    "build-client": "cd frontend && npm run build",
    "install-client":"cd client && npm install",
    "heroku-postbuild":"npm run install-client && npm run build-client",
    "client": "cd frontend && npm run start",
    "server": "cd backend && node server.js",
    "dev": "concurrently \"cd frontend/connect4 && npm run start\" \" cd backend && node index.js\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/biratkk/connect4.git"
  },
  "author": "Birat Koirala",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/biratkk/connect4/issues"
  },
  "homepage": "https://github.com/biratkk/connect4#readme",
  "dependencies": {
    "concurrently": "^6.2.1",
    "@material-ui/core": "^4.12.1",
    "@testing-library/jest-dom": "^5.12.0",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^12.8.3",
    "axios": "^0.21.1",
    "react": "^17.0.2",
    "react-bootstrap": "^1.6.0",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3",
    "socket.io-client": "^4.1.2",
    "web-vitals": "^1.1.2"
  },
  "devDependencies": {
    "npm-run-all": "^4.1.5"
  }
}
